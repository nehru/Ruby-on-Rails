<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title>TUNES Home Page</title>
    <link rel="stylesheet" href="http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css" type="text/css">
    <%= stylesheet_link_tag 'main' %>

    <style>

      body { background-color: white; }
      p { background-color: Beige   ; }
      h2 { background-color: transparent; }
      ul { background-image: url(/images/tricks.jpg);
           background-repeat: repeat-y;
           color: green;
      }

    </style>

  </head>
  <body>
    <div id="doc2" class="yui-t3">
      <div id="hd" role="banner"><h1> <%=  image_tag('t5.jpg') %> </h1></div>
      <div id="bd" role="main" style="height:90%">
        <div id="yui-main">
          <div class="yui-b"><div class="yui-g">
              <%= yield %>
            </div>
          </div>
        </div>
        <div class="yui-b">
          <%= render :partial=>'layouts/menu.rhtml' %>
        </div>

      </div>
      <div id="ft" role="contentinfo"><p><br/>Tunes Inc</p></div>
    </div>
  </body>
</html>
